Client {
  Name     = "<%= hostname %>"
  Address  = "<%= name %>"
  Password = "<%= director_password_real %>"
  Catalog  = "<%= scope.lookupvar('bacula::director::director_name') %>:<%= scope.lookupvar('bacula::director::db_backend') %>"
  File Retention = 6 Weeks
  Job Retention  = 1 Year
  Auto Prune = Yes
}

Job {
  Name     = "<%= hostname %>"
  Client   = "<%= hostname %>"
  Type     = Backup
  FileSet  = "<%= fileset %>"
  Storage  = "<%= scope.lookupvar('bacula::director::storage_server_real') %>:storage:default"
  Schedule = "<%= client_schedule %>"
  Pool     = "<%= scope.lookupvar('bacula::director::storage_server_real') %>:pool:default"
  Messages = "<%= scope.lookupvar('bacula::director::director_name') %>:messages:standard"
}
